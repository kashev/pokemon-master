<PokemonMasterGame>:
    orientation: 'vertical'

    FloatLayout:
        size_hint_y: 1
        size_hint_x: 1
        pos: 0, 0

        canvas:
            Color:
                rgb: 1, 1, 1
            Rectangle:
                source: 'res/images/whos_that_pokemon_blank.jpg'
                size: self.size

        Image:
            id: poke
            size_hint:(None, None)
            size: 256, 256
            pos: 125,  150

        PokemonMaskWidget:
            id: pokemask

    TextInput:
        id: guessbox

        size_hint_x: 1
        size_hint_y: 0.075
        multiline: False

        on_text_validate: root.on_enter()
